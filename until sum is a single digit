#include <stdio.h>

void main()
 {
    int n, sum = 0;
    printf("Enter a number");
    scanf("%d", &n);
    while (n > 0 || sum > 9)
	 {
        if (n == 0)
		 {
            n = sum;
            sum = 0;
        }
        sum += n % 10;
        n /= 10;
    }
    
    printf("Sum of digits until single digit: %d", sum);
    return 0;
}
